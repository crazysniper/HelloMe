<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.com.liandisys.hellome"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/NoActionTheme" >
        <activity android:name="cn.com.liandisys.hellome.activity.SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="cn.com.liandisys.hellome.activity.LoginActivity" />
        <activity android:name="cn.com.liandisys.hellome.activity.InboxActivity" />
        <activity android:name="cn.com.liandisys.hellome.activity.DraftBoxActivity" />
        <activity android:name="cn.com.liandisys.hellome.activity.DustbinActivity" />
        <activity android:name="cn.com.liandisys.hellome.activity.WriteActivity" />
        <activity android:name="cn.com.liandisys.hellome.activity.SettingActivity" />
        <activity android:name="cn.com.liandisys.hellome.activity.ReadActivity" />
        <activity android:name="cn.com.liandisys.hellome.activity.RegisterActivity" />
        <activity
            android:name="cn.com.liandisys.hellome.activity.ImageActivity"
            android:label="@string/title_activity_image" >
        </activity>
        
        <service android:name=".service.DownloadService" />
        <!-- <receiver android:name="" >
            <intent-filter>
                <action />
            </intent-filter>
        </receiver> -->
    </application>

</manifest>